.movie_show
  %h1= @movie.title
.div
  .row
    .col-4
      = image_tag @movie.poster.url(:medium), class: "img-fluid" if @movie.poster?

    .col-5.form-control
      %p= @movie.summary
      .row
        %ul.list-inline
          %li= "Language: #{@movie.language}"
          %li= "Release Date #{@movie.release_date}"

        = link_to @movie.imdb_link, target: 'blank' do
          = image_tag 'imdb_small'
        = link_to @movie.tmdb_link, target: 'blank' do
          = image_tag 'tmdb_small'

        = render('discs/actions', disc: @disc) if @disc
    .col-3
      .example_class
        %h3 Click
      %h3 User rating for this movie on top
      %p
        = render("discs/review") if @disc && @disc.review

        -#   %br
        -# - @disc.review do |r|
        -#   = r.user.name
        -#   %br
        -#   = r.plot_score
        -#   = r.plot_comment
        -#   %br
        -#   = r.acting_score
        -#   = r.acting_comment
        -#   %br
        -#   = r.summary
        -#   %br

  .row.people
    - @movie.people.limit(12).each do |person|
      = link_to person_path(person) do
        =image_tag(person.picture(:thumb), title: person.name)
