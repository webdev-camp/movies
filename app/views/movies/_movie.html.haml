.movie-card{id: "id_#{movie.id}", class: card_size}
  -if is_card
    .movie-header
      .row
        - if review = card.review()
          = link_to edit_card_review_path(card) do
            = image_tag '5star', class: 'star', :title => "card.review.string_summary"
        - else
          = image_tag '5star', class: 'star', :title => "Add a review!"

        = link_to wishlist_my_path(@cards) do
          = image_tag 'wishlist', class: 'star', :title => "Add to my wishlist"

        = link_to shelf_my_path(@cards) do
          = image_tag 'shelf', class: 'star', :title => "Add this to shelf if you have watched this"

  .movie-content
    =link_to movie_path(movie) do
      = image_tag movie.poster.url(:medium) , class: "img-fluid rounded movie-img"
      .movie-overlay
        %h3= movie.title
        .movie-actions
          -if is_card
            = render partial: 'cards/actions', locals: {card: card}
          -else
            = render partial: 'recommendations/recommended_actions', locals: {movie: movie}
