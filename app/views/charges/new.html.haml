= form_tag charges_path do
  %article
    - if flash[:error].present?
      #error_explanation
        %p= flash[:error]
    %label.amount
      %span
        Amount:
        = @dvd.price
        %br Condition:
        = @dvd.condition
        %br Movie:
        = @dvd.card.movie.title

  %script.stripe-button{"data-amount" => "@dvd.price",
   "data-description" => "Your chosen DVD",
   "data-key" => "#{Rails.configuration.stripe[:publishable_key]}",
   "data-locale" => "auto",
   :src => "https://checkout.stripe.com/checkout.js"}
