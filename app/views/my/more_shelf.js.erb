<% @cards.each do |card| %>
  $('#shelf').append("<%= escape_javascript(render card) %>");
  jQuery('#shelf > .movie-card').first().remove();
<%end%>

<% if @cards.next_page %>
  <%link =link_to '[more]', more_shelf_my_path(page: @cards.next_page), remote: true%>
  $('.shelf_link').html("<%= escape_javascript(link) %>");
<% else %>
  $('.shelf_link').remove();
<% end %>
