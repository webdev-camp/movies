= simple_form_for([@movie, @review], url: movie_review_path(@movie)) do |f|
  = f.error_notification

  .form-inputs
    = f.input :plot_score, input_html: { min: '0', max: '100'}
    = f.input :plot_comment
    = f.input :acting_score, input_html: { min: '0', max: '100'}
    = f.input :acting_comment
    = f.input :summary

  .form-actions
    = f.button :submit
