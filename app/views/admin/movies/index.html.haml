%h1 Listing movies
= paginate @movies
= search_form_for [:admin, @q] do |f|
  = f.label :title_cont
  = f.search_field :title_cont
  = f.submit

  = f.label :imdb_id_cont
  = f.search_field :imdb_id_cont
  = f.submit

  = f.label :tmdb_id_cont
  = f.search_field :tmdb_id_cont
  = f.submit

%table
  %thead
    %tr
      %th= sort_link(@q, :title)
      %th Summary
      %th Image
      %th Language
      %th imdb_id
      %th Tmdb Id
      %th= sort_link(@q, :budget)
      %th= sort_link(@q, :revenue)

  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.summary
        %td= image_tag movie.poster.url(:thumb)
        %td= movie.language
        %td= movie.imdb_id
        %td= movie.tmdb_id
        %td= movie.budget
        %td= movie.revenue
        %td= link_to 'Show', admin_movie_path(movie)

%br
= paginate @movies
= link_to 'New Movie', new_admin_movie_path
