%h1 Listing roles

%table
  %thead
    %tr
      %th Person name
      %th Character name
      %th Person
      %th Movie
      %th
      %th
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.person_name
        %td= role.character_name
        %td= role.person_id
        %td= role.movie_id
        %td= link_to 'Show', role
        %td= link_to 'Edit', edit_role_path(role)
        %td= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }

