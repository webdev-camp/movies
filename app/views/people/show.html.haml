.person_page
  %h1= @person.name
  .row
    .col-sm-6.col-md-4.col-lg-3.col-xl-2
      = image_tag @person.picture.url(:medium), class: 'img-fluid'
    .col-sm-3.col-md-4.col-lg-5.col-xl-5
      = @person.name
      = @person.bio
    .col-sm-3.col-md-4.col-lg-4.col-xl-5
      .row
        %h4 Info
        %ul
          %li
            Born in
            = @person.born_in
          %li
            Born on
            = @person.birthday
          %li
            Acted in
            = @person.movies.length
            movies
  .row
    .col
      %h4 Filmography / Highest Rated Movies
      .row
        -@person.movies.limit(12).each do |movie|
          .col-1
            = image_tag movie.poster.url(:thumb) , title: movie.title
%table
  %thead
    %tr
      %th Film
      %th Role
  %tbody
    - @person.roles.each do |role|
      %tr
        %td= link_to role.movie.title, movie_path(role.movie)
        %td= role.character_name
